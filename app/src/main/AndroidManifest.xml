<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Move_Movie_Detail" />
        <activity android:name=".MainFragment.DetailHome"></activity>
        <provider
            android:name="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.Provider.FavoriteProvider"
            android:authorities="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux"
            android:exported="true"
            android:readPermission="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.READ_DATABASE"
            android:writePermission="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.WRITE_DATABASE"/>
    </application>

</manifest>