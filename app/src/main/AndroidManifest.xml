<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailHome" />

        <provider
            android:name=".Provider.FavoriteProvider"
            android:authorities="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux"
            android:exported="true"
            android:readPermission="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.READ_DATABASE"
            android:writePermission="com.blogspot.labalabamen.iqbal.cataloguemovieui_ux.WRITE_DATABASE" />

        <receiver android:name=".StackWidget.FavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_widget_info" />
        </receiver>
        <receiver
            android:name=".AlertNofication.DailyReminder"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".AlertNofication.UpcomingReminder"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".StackWidget.FavoriteWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name=".utils.SettingsPrefernces"
            android:label="@string/title_activity_settings_prefernces"/>
        <activity android:name=".AlertNofication.DetailNotification"></activity>
    </application>

</manifest>